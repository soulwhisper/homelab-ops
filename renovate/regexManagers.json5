{
  regexManagers: [
    {
      fileMatch: ["helmfile\\.yaml$"],
      description: "Regex for helmfile deps",
      matchStrings: [
        'name:\\s*"?(?<product>\\S+)"?.*\\n\\s*namespace:\\s*"?(?<namespace>\\S+)"?.*\\n\\s*chart:\\s*"?(?<chart>\\S+)"?.*\\n\\s*version:\\s*"?(?<currentValue>[\\S]+)"?.*\\n\\s*repositories:\\s*\\n\\s*-\\s*name:\\s*"?(?<repoName>\\S+)"?.*\\n\\s*url:\\s*"(?<repoUrl>(https?|oci)://[\\S]+/(?<product>[\\S]+))"',
      ],
      datasourceTemplate: "docker",
      packageNameTemplate: "{{product}}",
      versioningTemplate: "semver",
    },
    {
      fileMatch: ["helmrelease\\.yaml$"],
      description: "Regex for app deps",
      matchStrings: [
        'repository:\\s*"?(?<repository>docker.io/\\S+)"?.*\\ntag:\\s*"?(?<currentValue>v[\\d\\.]+)"?',
      ],
      datasourceTemplate: "docker",
      packageNameTemplate: "{{repository}}",
      versioningTemplate: "semver",
    },
  ],
}
